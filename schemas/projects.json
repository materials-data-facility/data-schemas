{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "projects block",
    "type": "object",
    "description": "Schema for organization-defined project blocks.",
    "properties": {
        "projects": {
            "type": "object",
            "description": "External organization-defined block.",
            "properties": {
                "nanomfg": {
                    "type": "object",
                    "description": "Project block for NanoMFG.",
                    "properties": {
                        "base_pressure": {
                            "type": "number"
                        },
                        "carbon_source": {
                            "type": "string"
                        },
                        "catalyst": {
                            "type": "string"
                        },
                        "grain_size": {
                            "type": "string"
                        },
                        "max_temperature": {
                            "type": "number"
                        },
                        "orientation": {
                            "type": "string"
                        },
                        "sample_surface_area": {
                            "type": "number"
                        },
                        "sample_thickness": {
                            "type": "number"
                        }
                    },
                    "additionalProperties": false
                },

                "verde": {
                    "type": "object",
                    "description": "VERDE calculation outputs",
                    "properties": {
                        "vertical_excitation_energy": {
                            "type": "number",
                            "description": "Vertical excitation energy. Units: eV"
                        },
                        "ionization_potential": {
                            "type": "number",
                            "description": "Ionization potential. Units: eV"
                        },
                        "redox_potential": {
                            "type": "object",
                            "description": "Redox potentials of the molecule. Units: eV",
                            "additionalProperties": false,
                            "properties": {
                                "S0": {
                                    "type": "number",
                                    "description": "Redox potential for electronic ground state S0. Units: eV"
                                },
                                "S1": {
                                    "type": "number",
                                    "description": "Redox potential for electronicically excited state S1. Units: eV"
                                },
                                "T1": {
                                    "type": "number",
                                    "description": "Redox potential for electronically excited state T1. Units: eV"
                                }
                            }
                        },
                        "dipole_moment": {
                            "type": "object",
                            "description": "Dipole moment of the molecule. Units: Debye",
                            "additionalProperties": false,
                            "properties": {
                                "S0": {
                                    "type": "number",
                                    "description": "Dipole moment for electronic ground state S0. Units: Debye"
                                },
                                "S1": {
                                    "type": "number",
                                    "description": "Dipole moment for electronicically excited state S1. Units: Debye"
                                },
                                "T1": {
                                    "type": "number",
                                    "description": "Dipole moment for electronically excited state T1. Units: Debye"
                                }
                            }
                        },
                        "0_0": {
                            "type": "object",
                            "description": "0-0 transition energies of the molecule. Units: eV",
                            "additionalProperties": false,
                            "properties": {
                                "S1": {
                                    "type": "number",
                                    "description": "0_0 energy for electronicically excited state S1. Units: eV"
                                },
                                "T1": {
                                    "type": "number",
                                    "description": "0_0 energy for electronically excited state T1. Units: eV"
                                }
                            }
                        }
                    },
                    "additionalProperties": false
                },
                "foundry": {
                    "type": "object",
                    "description": "Project block for Foundry data packages.",
                    "properties": {
                        "inputs":{
                                "type":"array", 
                                "items": { 
                                    "type": "string"
                                }
                        },
                        "input_descriptions":{
                            "type":"array", 
                            "items": { 
                                "type": "string"
                            }
                        },
                        "input_units":{
                            "type":"array", 
                            "items": { 
                                "type": "string"
                            }
                        },
                        "outputs":{
                            "type":"array", 
                            "items": { 
                                "type": "string"
                            }
                        },
                        "output_descriptions":{
                            "type":"array", 
                            "items": { 
                                "type": "string"
                            }
                        },
                        "output_units":{
                            "type":"array", 
                            "items": { 
                                "type": "string"
                            }
                        },
                        "output_labels":{
                            "type":"array", 
                            "items": { 
                                "type": "string"
                            }
                        },
                        "short_name":{
                            "type":"string"
                        },
                        "package_type":{
                            "type":"string"
                        }
                    },
                    "additionalProperties": false
                },
                "pfhub": {
                    "type": "object",
                    "description": "Project block for PFHub.",
                    "properties": {
                        "cpu_architecture": {
                            "type": "string"
                        },
                        "acc_architecture": {
                            "type": "string"
                        },
                        "parallel_model": {
                            "type": "string"
                        },
                        "clock_rate": {
                            "type": "number"
                        },
                        "cores": {
                            "type": "integer"
                        },
                        "nodes": {
                            "type": "integer"
                        },
                        "benchmark_id": {
                            "type": "string"
                        },
                        "benchmark_version": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    }
}
