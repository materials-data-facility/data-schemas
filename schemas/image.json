{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "MDF image schema",
    "description": "Schema to describe general images.",
    "properties": {
        "image": {
            "type": "object",
            "description": "Key metadata about images",
            "properties": {
                "megapixels": {
                    "description": "Millions of pixels within an image",
                    "type": "number"
                },
                "dimensionality": {
                    "description": "Number of dimensions in the image.",
                    "type": "integer"
                },
                "dimension_sizes": {
                    "description": "Sizes of each dimension, in pixels.",
                    "type": "array",
                    "items": {
                        "description": "One dimension size. Unit: pixel",
                        "type": "integer"
                    }
                },
                "color_depth": {
                    "description": "Number of bits used to describe each color",
                    "type": "integer"
                },
                "channels": {
                    "description": "Number of color channels or spectra",
                    "type": "integer"
                }
            },
            "additionalProperties": false
        }
    }
}
