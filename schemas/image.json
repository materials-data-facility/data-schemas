{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "MDF image schema",
    "description": "Schema to describe general images.",
    "properties": {
        "image": {
            "type": "object",
            "description": "Key metadata about images",
            "properties": {
                "megapixels": {
                    "description": "Millions of pixels within an image",
                    "type": "number"
                },
                "width": {
                    "description": "Number of pixels in the horizontal direction",
                    "type": "integer"
                },
                "height": {
                    "description": "Number of pixels in the vertical direction",
                    "type": "integer"
                },
                "color_depth": {
                    "description": "Number of bits used to describe each color",
                    "type": "integer"
                },
                "channels": {
                    "description": "Number of color channels or spectra",
                    "type": "integer"
                }
            },
            "additionalProperties": false
        }
    }
}
