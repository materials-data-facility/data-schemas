{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "MDF image schema",
    "description": "Schema to describe general images.",
    "properties": {
        "image": {
            "type": "object",
            "description": "Key metadata about images",
            "properties": {
                "shape": {
                    "description": "The shape of the image, in channels-last format.",
                    "type": "array",
                    "items": {
                        "description": "Dimension size. Unit: #",
                        "type": "integer"
                    }
                },
                "color_depth": {
                    "description": "Number of bits used to describe each color",
                    "type": "integer"
                }
            },
            "additionalProperties": false
        }
    }
}
