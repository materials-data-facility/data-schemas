{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "MDF Molecule",
    "description": "Schema to describe a molecule.",
    "type": "object",
    "properties": {
        "molecule": {
            "type": "object",
            "description": "Data describing a molecule",
            "properties": {
                "molecular_weight": {
                    "type": "number",
                    "description": "Molecular weight of the molecule in g/mol."
                },
                "chemical_formula": {
                    "type": "string",
                    "description": "Chemical formula of the molecule"
                },
                "iupac_name": {
                    "type": "string",
                    "description": "IUPAC name of the molecule"
                },
                "synonyms": {
                    "type": "string",
                    "description": "Synonymous names of the molecule"
                },
                "number_of_atoms": {
                    "type": "integer",
                    "description": "Number of atoms in the molecule."
                },
                "smiles":{
                    "type": "string",
                    "description": "SMILES string representation of the molecule"
                },
                "inchi":{
                    "type": "string",
                    "description": "InChi string representation of the molecule"
                },
                "homo":{
                    "type":"number",
                    "description":"Highest occupied molecular orbital. Units: eV"
                },
                "lumo":{
                    "type":"number",
                    "description":"Lowest unoccupied molecular orbital. Units: eV"
                },
                "dipole_moment":{
                    "type":"number",
                    "description":"Electric dipole moment. Units: Debye"
                },
                "cross_reference": {
                    "type": "object",
                    "description": "Cross-references of this molecule in other databases.",
                    "additionalProperties": false,
                    "properties": {
                        "chemspider": {
                            "type": "integer",
                            "description": "Chemspider ID of the molecule."
                        },
                        "pubchem_cid": {
                            "type": "integer",
                            "description": "PubChem CID of the molecule."
                        }
                    }
                }
            },
            "additionalProperties": false
        }
    }
}
