{
"$schema": "http://json-schema.org/draft-04/schema#",
"title": "MDF Electron Microscopy schema",
"description": "Schema to describe electron microscopy data.",
"properties": {
    "electron_microscopy": {
        "type": "object",
        "description": "electron_microscopy block",
        "properties": {
            "acquisition_mode":{
                "type":"string"
            }, 
            "beam_current":{
                "type":"number"
            },
            "beam_energy":{
                "type":"number"
            },
            "detector":{
                "type":"string"
            },
            "magnification":{
                "type":"number"
            },
            "microscope":{
                "type":"string"
            },
            "exposure":{
                "type":"number"
            },
            "collection_angle":{
                "type":"number"
            }
        },
        "additionalProperties": false
    }
}
}
