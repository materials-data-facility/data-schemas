{
"$schema": "http://json-schema.org/draft-04/schema#",
"title": "MDF image schema",
"description": "Schema to describe general images.",
"properties": {
    "image": {
        "type": "object",
        "description": "image block",
        "properties": {
            "width":{
                "type":"integer"
            }, 
            "height":{
                "type":"integer"
            },
            "bits":{
                "type":"integer"
            },
            "scale":{
                "type":"number"
            },
            "pixel_format":{
                "type":"string"
            }
        },
        "additionalProperties": false
    }
}
}
