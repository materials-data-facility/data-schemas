{
"$schema": "http://json-schema.org/draft-04/schema#",
"title": "Files block",
"type": "object",
"description": "Schema for files block in a record.",
"properties": {
    "files": {
        "type": "array",
        "description": "Data files and their metadata.",
        "items": {
            "type": "object",
            "description": "Data file metadata.",
            "properties": {
                "globus": {
                    "type": "string",
                    "description": "The Globus Endpoint ID and path to the data."
                },
                "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "The URL to the data."
                },
                "format": {
                    "type": "string",
                    "description": "Format of the file. Will be specific to the kind of data (e.g., images can be `gif`s)"
                },
                "data_type": {
                    "type": "string",
                    "description": "The type of data in this file."
                },
                "mime_type": {
                    "type": "string",
                    "description": "The MIME type of the file."
                },
                "length": {
                    "type": "integer",
                    "description": "The size of the file in bytes."
                },
                "filename": {
                    "type": "string",
                    "description": "The file's name."
                },
                "md5": {
                    "type": "string",
                    "description": "The MD5 has of the file."
                },
                "sha1": {
                    "type": "string",
                    "description": "The SHA1 hash of the file."
                },
                "sha256": {
                    "type": "string",
                    "description": "The SHA256 hash of the file."
                },
                "sha512": {
                    "type": "string",
                    "description": "The SHA512 hash of the file."
                }
            },
            "additionalProperties": false,
            "required": [
                "data_type",
                "filename"
            ]
        },
        "minItems": 1
    }
}
}
